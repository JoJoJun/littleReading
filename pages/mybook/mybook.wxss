.mybook-list{
	padding: 0 20rpx;
}
.mybook-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}

.mybook-img{
	width: 210rpx;
	height: 280rpx;
}
.mybook-item image{
	width: 210rpx;
	height: 280rpx;
}
.mybook-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.mybook-text .mybook-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.mybook-tags{
	margin: 6rpx 0;
}
.mybook-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.mybook-author{
	color: #666;
}

.empty{
  
    width: 100%;
height: 100%;
display: flex;
justify-content: center;
 align-items: center;

}
.emem{
  text-align: center
}
