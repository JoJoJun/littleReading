.detail-banner{
	position: relative;
	vertical-align: middle;
}
.detail-banner swiper{
	width: 100%;
	height: 500rpx;
	vertical-align: middle;
}
.detail-banner .slide-image{
	width: 50%;
	height: 500rpx;
	vertical-align: middle;
}
.number-banner{
	position: absolute;
	right: 40rpx;
	margin-top: -80rpx;
	padding: 0 16rpx;
	background: rgba(0,0,0,.3);
	border-radius: 6rpx;
	color: #fff;
	font-size: 36rpx;
}
.number-banner text:last-child{
	color: rgba(255,255,255,.6);
	font-size: 30rpx;
}
.detail-title{
	font-size: 44rpx;
	line-height: 2;
}
.detail-tags{
	margin-bottom: 10rpx;
}
.detail-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-detail: nowrap;
}
.detail-item{
	display: flex;
	font-size: 32rpx;
	color: #555;
	padding: 16rpx 0;
	border-bottom: 1rpx solid #eee;
}
.detail-item .text-left{
	white-detail: nowrap;
}
.detail-item .text-orange{
	font-size: 30rpx;
	color: #555;
}
.detail-item .text-right{
	color: #777;
}
.container-footer text.apply-btn{
	background: #f7982a;
	color: #fff;
	flex: 1.5;
}
.detail-block-title{
	font-size: 40rpx;
}
.detail-block-title:before{
	content: '';
	display: inline-block;
	vertical-align: -6rpx;
	width: 6rpx;
	height: 40rpx;
	background: #f7982a;
	margin-right: 8rpx;
}
.detail-block-content .detail-list{
	overflow: hidden;
}
.detail-block-content .detail-list .detail-item{
	width: 50%;
	float: left;
